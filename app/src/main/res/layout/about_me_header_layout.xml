<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen150"
    app:cardElevation="@dimen/dimen2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/about_me_header_profile_picture"
            android:layout_width="@dimen/dimen150"
            android:layout_height="0dp"
            android:contentDescription="@string/about_me_header_profile_content_description"
            android:padding="@dimen/dimen16"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/about_me_header_profile_barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/about_me_header_profile_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="about_me_header_profile_picture" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_me_header_profile_title"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen16"
            android:layout_marginBottom="@dimen/dimen8"
            android:textAlignment="center"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/about_me_header_profile_barrier"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/about_me_header_profile_subtitle"
            tools:text="Profile Username" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_me_header_profile_subtitle"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen16"
            android:layout_marginBottom="@dimen/dimen16"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/about_me_header_profile_barrier"
            app:layout_constraintTop_toBottomOf="@id/about_me_header_profile_title"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Android Software Engineer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>